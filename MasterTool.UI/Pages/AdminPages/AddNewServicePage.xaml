<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MasterTool.UI.Pages.AdminPages.AddNewServicePage"
             Title="AddNewServicePage">
    <VerticalStackLayout>
        <Entry Placeholder="Service's type" Text="{Binding Service.ServiceName}" />
        <Entry Placeholder="Tarif" Text="{Binding Service.Tarif}"/>
        <Button Text="Send" Command="{Binding CreateServiceCommand}"/>
    </VerticalStackLayout>
</ContentPage>