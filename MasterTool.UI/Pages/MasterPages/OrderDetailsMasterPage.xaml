<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MasterTool.UI.Pages.MasterPages.OrderDetailsMasterPage"
             Title="OrderDetailsMasterPage">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False" />
    </Shell.BackButtonBehavior>

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior EventName="Loaded" Command="{Binding LoadOrderDataCommand }"/>
    </ContentPage.Behaviors>

    <StackLayout>
        <Label Text="{Binding Request.Service}" />
        <Label Text="{Binding Request.ItemType}" />
        <Label Text="{Binding Order.Id}" />
        <Button x:Name="BackBtn" Text="Назад" Command="{Binding GoBackCommand}"/>
        <Button Text="Заказ готов" Command="{Binding FinishOrderCommand}"/>
        <Button Text="Добавить детали со склада"/>
    </StackLayout>
</ContentPage>