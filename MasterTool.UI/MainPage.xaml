<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MasterTool.UI.MainPage">

    <ContentPage.Content>
        <StackLayout Padding="20" VerticalOptions="CenterAndExpand">
            <Image Source="tools.png" HeightRequest="200" HorizontalOptions="Center" />
            <Label Text="Welcome to MasterTool!" FontSize="32" HorizontalOptions="Center" Margin="0,20,0,0"/>
            <Button x:Name="SignUpBtn" Text="Sign Up" Clicked="OnSignUpClicked" HorizontalOptions="FillAndExpand" Margin="0,20,0,0"/>
            <Button x:Name="LogInBtn" Text="Log In" Clicked="OnLogInClicked" HorizontalOptions="FillAndExpand" Margin="0,10,0,0"/>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>
